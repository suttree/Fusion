<% [:error, :warning, :notice].each do |level| 
    if flash[level] -%>
      <div class="flash <%= level.to_s -%>" id="<%= level.to_s -%>"><%= flash[level] -%></div>
      <%= audioPlayer(flash[level]) -%>
      <script type="text/javascript">
        $("#<%= level.to_s -%>").effect("highlight", {}, 2000);
        setTimeout($("#<%= level.to_s -%>").fadeOut("slow"), 2000);
      </script>
  <% end -%> 
<% end -%> 
<div id='audioPlayer'> </div>
